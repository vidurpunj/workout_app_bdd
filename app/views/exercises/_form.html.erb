<%= form_with(url: [current_user, @exercise], model: @exercise, html: {class: 'form-horizontal', role: 'form'}, local: true) do |f| %>
  <% if @exercise.errors.any? %>
    <div class="error_explaination">
      <h2><%= pluralize(@exercise.errors.count, 'error') %>
        prohibited the exercise to be saved.</h2>
      <ul>
        <% @exercise.errors.full_messages.each do |message| %>
          <li>
            <%= message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :duration_in_minute, 'Duration (min)' %>
    <%= f.number_field :duration_in_minute, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :workout, 'Workout Details' %>
    <%= f.text_area :workout, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :activity_date, 'Activity date' %>
    <%= f.date_field :activity_date, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.submit %>
  </div>
<% end %>